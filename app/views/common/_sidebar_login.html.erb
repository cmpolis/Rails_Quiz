<h3>Login</h3>
<% form_tag session_path, :id => "side_login" do -%>
<%= text_field_tag 'login', @login, :size => 30, :placeholder => "login"  %>
<br/>
<%= password_field_tag 'password', nil, :size => 30, :placeholder => "password"  %>
<br />

<%= submit_tag 'Log in' %> or <b><%= link_to "Register", signup_path %></b><br />
<%= label_tag 'remember_me', '<small>Remember me</small>' %>
<%= check_box_tag 'remember_me', '1', @remember_me %>
<% end -%>

