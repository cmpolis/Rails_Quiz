<h3>Login</h3>

<% form_for :session, :url => session_path, :html => {:id => "side_login"} do |form| %>
  <%= form.text_field :email, :size => 36, :placeholder => "email" %>
  <br />
  <%= form.password_field :password, :size => 36, :placeholder => "password" %>
  <br />
  <%= form.submit "Sign in", :disable_with => "Please wait..." %>
  or <b><%= link_to "Register", sign_up_path %></b>

<% end %>
