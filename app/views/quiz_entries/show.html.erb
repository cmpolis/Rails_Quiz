<% title "Results for #{@quiz.title}" %>
<h3>Results for quiz: <%= @quiz.title %></h3><br />
<% @questions.each do |question| %>
  <b><%= question.text %></b><br />
  <% question.answers.each do |answer| %>
    <%= "X " if @answers.include?(answer) %>
    <%= "C " if question.right_ans == answer %>
    <%= answer.text %><br />
  <% end %>
  <br />
<% end %>
You scored: <%= @right_answers.length %> / <%= @questions.length %><br />
Likes: <%= @quiz.likes.length %> <%= button_to "Like", {:controller => "likes", :action => "create", :id => @quiz.id} %><br />
<% form_for :comment, @comment, :url=>{:controller=>"comments", :action=>:create} do |f| %>
  <%= f.error_messages %>
  <%= f.text_area :text %><br />
<% end %>
<br />
