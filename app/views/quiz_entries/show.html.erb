<% title "Results for #{@quiz.title}" %>
<h3>Results for quiz: <%= @quiz.title %></h3><br />
<% @questions.each do |question| %>
  <b><%= question.text %></b><br />
  <% question.answers.each do |answer| %>
    <%= "X " if @answers.include?(answer) %>
    <%= "C " if question.right_ans == answer %>
    <%= answer.text %><br />
  <% end %>
  <br />
<% end %>
You scored: <%= @right_answers.length %> / <%= @questions.length %><br />
<br />
