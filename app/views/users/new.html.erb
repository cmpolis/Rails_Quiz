<% title "Register" %>
<h2>Sign up as a new user</h2>
<% @user.password = @user.password_confirmation = nil %>

<% form_for :user, :url => users_path do |f| %>
  <table width="70%">
  <%= error_messages_for :user %>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :login, "Username" %></td>
    <td><%= f.text_field :login %></td>
  </tr>
  <tr>
    <td><%= f.label :location %></td>
    <td><%= f.text_field :location, :placeholder => "optional" %></td>
  </tr>
  <tr>
    <td><%= f.label :bio %></td>
    <td><%= f.text_field :bio, :placeholder => "optional" %></td>
  </tr>
  <tr>
    <td><%= f.label :private, "Prviate profile" %></td>
    <td><%= f.check_box :private %></td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><%= f.label :password_confirmation, "Confirm password" %></td>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr><td colspan="2"><center><%= submit_tag 'Sign Up', :disable_with => 'Please wait...' %></center></td></tr>
  </table>
  <br />
<% end %>